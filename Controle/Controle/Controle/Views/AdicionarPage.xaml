<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controle.Views.AdicionarPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Adicionar" Clicked="Button_Clicked" />
            <ListView VerticalOptions="FillAndExpand" x:Name="ControleLista">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Data}" FontSize="Micro"/>
                                <Label Text="{Binding Descricao}" FontSize="Micro"/>
                                <Label Text="{Binding Valor}" FontSize="Micro"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>